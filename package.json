{
  "name": "ts-app",
  "version": "1.0.0",
  "description": "Boilerplate project for a TypeScript API (Express, tsoa) + UI (React/TSX)",
  "repository": "https://github.com/lukeautry/ts-app",
  "author": "Luke Autry <lukeautry@gmail.com>",
  "license": "MIT",
  "scripts": {
    "cli:analyze_bundle": "ts-node ./dev/cli/analyze-bundle.ts",
    "cli:docker_stop": "ts-node ./dev/cli/stop-docker.ts",
    "cli:docker_start": "ts-node ./dev/cli/start-docker.ts",
    "cli:migrate": "ts-node ./dev/cli/db-migrate.ts",
    "cli:start_prod": "cross-env NODE_ENV=prod DB_CONNECTION=defaultdb SERVER_PORT=3000 ts-node ./dev/cli/start-dev-env.ts",
    "cli:start_dev": "cross-env NODE_ENV=dev DB_CONNECTION=defaultdb SERVER_PORT=3000 ts-node ./dev/cli/start-dev-env.ts",
    "cli:tsoa": "ts-node ./dev/cli/tsoa.ts",
    "cli:update": "ts-node ./dev/cli/db-update.ts",
    "lint:fix": "yarn lint --fix",
    "lint": "eslint */**/*.{ts,tsx}",
    "start": "yarn cli:start_dev",
    "test": "cross-env NODE_ENV=test DB_CONNECTION=test SERVER_PORT=3037 mocha -t 15000 -r ts-node/register \"./**/*.spec.ts\"",
    "ts:build": "tsc --build",
    "ts:watch": "yarn ts:build --watch",
    "typeorm": "ts-node ./node_modules/.bin/typeorm"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "ioredis": "^4.17.3",
    "method-override": "^3.0.0",
    "moment": "^2.29.1",
    "pg": "^8.4.1",
    "reflect-metadata": "^0.1.13",
    "tsoa": "^3.3.0",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "@types/assets-webpack-plugin": "^3.9.0",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.13",
    "@types/chokidar": "^2.1.3",
    "@types/clean-webpack-plugin": "^0.1.3",
    "@types/express": "^4.17.8",
    "@types/ioredis": "^4.17.5",
    "@types/method-override": "^0.0.31",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "@types/pg": "^7.14.5",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/readline-sync": "^1.4.3",
    "@types/styled-components": "^5.1.4",
    "@types/supertest": "^2.0.10",
    "@types/webpack": "^4.41.22",
    "@types/webpack-bundle-analyzer": "^3.8.0",
    "@types/webpack-livereload-plugin": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "assets-webpack-plugin": "^5.1.2",
    "chai": "^4.2.0",
    "chokidar": "^3.4.3",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "docker-compose": "^0.23.5",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "keypress": "^0.2.1",
    "minimatch": "^3.0.4",
    "mocha": "^8.1.3",
    "openapi-typescript-codegen": "^0.5.1",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "readline-sync": "^1.4.10",
    "styled-components": "^5.2.0",
    "styled-reset": "^4.2.3",
    "supertest": "^5.0.0",
    "ts-loader": "^8.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-livereload-plugin": "^2.3.0"
  },
  "resolutions": {
    "@types/react": "16.9.52"
  }
}
